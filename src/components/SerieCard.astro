---
export interface Props {
  id: string;
  title: string;
  streamingService: string;
  seasons: number;
  episodesPerSeason: number;
  description: string;
  category: string;
  stars: string;
  starsCount: number;
  imageUrl?: string;
}

const {
  id,
  title,
  streamingService,
  seasons,
  episodesPerSeason,
  description,
  category,
  stars,
  starsCount,
  imageUrl = "/placeholder.jpeg"
} = Astro.props;
---

<a href={`/series/${id}`}>
  <div class="flex flex-col items-center justify-between gap-2 p-2 bg-white shadow-md rounded-lg">
    <img
      src={imageUrl}
      alt="Placeholder"
      width="200"
      height="300"
      class="rounded-lg"
    />
    <div class="flex flex-col justify-between gap-2">
      <h2 class="text-xl font-bold text-center">{title}</h2>
      <p class="text-sm">{streamingService}</p>
      <p class="text-sm">Temporadas: {seasons}</p>
      <p class="text-sm">Episodios por temporada: {episodesPerSeason}</p>
      <p class="text-sm">{description.slice(0, 50)}...</p>
      <div class="flex justify-between">
        <p class="text-sm">{category}</p>
        <p class="text-sm">⭐️ {stars} ({starsCount})</p>
      </div>
    </div>
  </div>
</a>
