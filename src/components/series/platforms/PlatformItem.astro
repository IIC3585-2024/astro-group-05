---
export interface SeasonItemProps {
    platform: any;
}

const { platform } = Astro.props as SeasonItemProps;
---

<a href={platform.platformUrl} class="bg-white shadow-lg rounded-lg p-4 hover:bg-gray-100 focus:outline-none focus:ring focus:ring-indigo-200">
    <div class="flex justify-between">
        <h3 class="text-lg font-semibold">{platform.platforms.platform}</h3>
    </div>
</a>
